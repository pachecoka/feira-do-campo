<%- contentFor('body') %>
<div class="columns is-centered">
  <div class="container col-md-6 offset-md-3">
    <h1 class="mb-4 mt-5">Editar Produto</h1>
    <form method="POST" action="/products/<%=product.id%>?_method=PUT" enctype="multipart/form-data">
      <div class="form-row">

        <div class="form-group col-sm-8">
          <label for="nomeProduto">Nome</label>
          <input value="<%= product.title %>" type="text" class="form-control" id="nomeProduto" name="title" placeholder="Digite o nome do produto">
        </div>
        <div class="form-group col-sm-4">
          <label for="precoProduto">Preço</label>
          <input value="<%= product.price %>" type="number" class="form-control" id="precoProduto" name="price" placeholder="Digite o preço do produto" min="0.01" step="0.01">
        </div>
        <div class="form-group col-sm-12">
          <label for="descricaoProduto">Descrição</label>
          <textarea class="form-control" id="descricaoProduto" name="description" rows="2" placeholder="Digite uma descrição para o produto"><%= product.description %></textarea>
        </div>
        <div class="form-group col-sm-12">
          <label for="imagemProduto">Imagem</label>
          <input value="<%= product.image %>" type="text" class="form-control" id="imagemProduto" name="image" placeholder="Digite a URL para a imagem do produto">
        </div>

      </div>
      <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
  </div>
</div>