<%- contentFor('body') %>

<div class="columns is-centered">
  <div class="container col-md-6 offset-md-3">
    <h1 class="mb-4 mt-5">Realizar Login</h1>
    
    <form action="/login" method="post">
        <div class="form-group">
          <label for="inputEmail">E-mail *</label>
          <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Informe o seu e-mail" required>
        </div>
        <div class="form-group">
          <label for="inputPassword">Senha *</label>
          <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Informe sua senha" required>
        </div>
        <button type="submit" class="btn btn-success">Acessar</button>
    </form>

  </div>
</div>