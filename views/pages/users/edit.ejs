<%- contentFor('body') %>

<div class="columns is-centered">
  <div class="container col-md-6 offset-md-3">
    <h1 class="mb-4 mt-5">Dados Cadastrados</h1>
    <form action="/user?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="inputFirstName">Nome</label>
        <input type="text" value="<%= user.firstName %>" class="form-control" id="inputFirstName" name="firstName" placeholder="Digite o seu primeiro nome" required>
      </div>
      <div class="form-group">
        <label for="inputLastName">Sobrenome</label>
        <input type="text" value="<%= user.lastName %>" class="form-control" id="inputLastName" name="lastName" placeholder="Digite o seu sobrenome" required>
      </div>
      <div class="form-group">
        <label for="inputEmail">E-mail</label>
        <input type="email" value="<%= user.email %>" class="form-control" id="inputEmail" name="email" placeholder="Seu e-mail cadastrado" readonly>
      </div>
      <div class="form-group">
        <label for="inputPassword">Senha</label>
        <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Digite uma senha para a conta">
      </div>
      <div class="form-group">
        <label for="inputRepeatedPassword">Repita sua senha</label>
        <input type="password" class="form-control" id="inputRepeatedPassword" name="repeatedPassword" placeholder="Repita a senha para a conta">
      </div>
      <button type="submit" class="btn btn-primary btn-block mt-2 mb-3">Salvar</button>
      <div class="form-group">
        <a href="/">Voltar</a>
      </div>
    </form>
  </div>
</div>